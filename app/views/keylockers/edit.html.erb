<div id="page-wrapper">
  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-12">
        <ol class="breadcrumb">
          <li class="active">
            <h1><i class="fas fa-box"></i> Meus Lockers</h1>
          </li>
        </ol>
      </div>
    </div>
    <%= form_with(model: @keylocker, local: true) do |form| %>
      <% if @keylocker.errors.any? %>
        <div class="alert alert-danger">
          <h4><%= pluralize(@keylocker.errors.count, "erro") %> impediram o cadastro do locker:</h4>
          <ul>
            <% @keylocker.errors.full_messages.each do |msg| %>
              <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="row">
        <div class="col-md-8 mb-4">
          <div class="card mb-4">
            <div class="card-header py-3">
              <h5 class="mb-0">Editar Locker</h5>
            </div>
            <div class="card-body">
              <!-- Proprietário -->
              <div class="form-outline mb-4">
                <%= form.label :owner, 'Proprietário do Locker', class: "form-label" %>
                <%= form.text_field :owner, class: 'form-control' %>
              </div>

              <!-- Tipo de Armário -->
              <div class="form-outline mb-4">
                <%= form.label :lockertype, "Tipo de Armário", class: "form-label" %>
                <%= form.select :lockertype, ['Armário de chaves', 'Armário de encomendas', 'Guarda Volume'], prompt: "Selecione o tipo de armário", class: 'form-control' %>
              </div>

              <!-- Nome do Locker -->
              <div class="form-outline mb-4">
                <%= form.label :nameDevice, 'Nome do Locker', class: "form-label" %>
                <%= form.text_field :nameDevice, class: 'form-control' %>
              </div>

              <!-- CNPJ ou CPF -->
              <div class="form-outline mb-4">
                <%= form.label :cnpjCpf, 'CNPJ ou CPF', class: "form-label" %>
                <%= form.text_field :cnpjCpf, class: 'form-control' %>
              </div>

              <!-- Campos Dinâmicos - Keylocker Infos -->
              <div id="keylockerinfos-container">
                <% @keylocker.keylockerinfos.each_with_index do |info, index| %>
                  <div class="nested-fields mb-3 border rounded p-2 position-relative" data-index="<%= index %>">
                    <%= hidden_field_tag "keylocker[keylockerinfos_attributes][#{index}][id]", info.id %>

                    <div class="form-group">
                      <label>Posição: <span class="position-number"><%= index + 1 %></span></label>
                      <%= hidden_field_tag "keylocker[keylockerinfos_attributes][#{index}][posicion]", index + 1 %>
                      <%= text_field_tag "keylocker[keylockerinfos_attributes][#{index}][object]", info.object, class: "form-control", placeholder: "Descrição da Posição" %>
                    </div>

                    <!-- Tag RFID -->
                    <div class="form-group">
                      <label>Tag RFID:</label>
                      <%= text_field_tag "keylocker[keylockerinfos_attributes][#{index}][tagRFID]", info.tagRFID, class: "form-control", placeholder: "Tag RFID" %>
                    </div>

                    <!-- ID Interno -->
                    <div class="form-group">
                      <label>ID Interno:</label>
                      <%= text_field_tag "keylocker[keylockerinfos_attributes][#{index}][idInterno]", info.idInterno, class: "form-control", placeholder: "ID Interno" %>
                    </div>

                    <!-- Descrição -->
                    <div class="form-group">
                      <label>Descrição:</label>
                      <%= text_field_tag "keylocker[keylockerinfos_attributes][#{index}][description]", info.description, class: "form-control", placeholder: "Descrição" %>
                    </div>

                    <!-- Imagem -->
                    <div class="form-group">
                      <label>Imagem:</label>
                      <%= file_field_tag "keylocker[keylockerinfos_attributes][#{index}][image]", class: "form-control" %>
                    </div>

                    <button type="button" class="btn btn-danger btn-sm position-absolute" style="top: 5px; right: 5px;" onclick="removeNiche(this)">
                      <i class="fas fa-times"></i>
                    </button>
                  </div>
                <% end %>
              </div>

              <button type="button" class="btn btn-secondary mt-2" onclick="addNiche()">+ Adicionar posição</button>

              <!-- Botões -->
              <div class="d-flex mt-3">
                <%= form.submit 'Salvar Alterações', class: 'btn btn-primary mr-2' %>
                <%= link_to "Voltar", keylockers_path, class: 'btn btn-success' %>
              </div>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>

<script>
let nicheIndex = 0;

function addNiche() {
  const container = document.getElementById('keylockerinfos-container');

  const nicheField = document.createElement('div');
  nicheField.className = 'nested-fields mb-3 border rounded p-2 position-relative';
  nicheField.setAttribute('data-index', nicheIndex);

  nicheField.innerHTML = `
    <div class="form-group">
      <label>Posição: <span class="position-number">${nicheIndex + 1}</span></label>
      <input type="hidden" name="keylocker[keylockerinfos_attributes][${nicheIndex}][posicion]" value="${nicheIndex + 1}" />
      <input type="text" name="keylocker[keylockerinfos_attributes][${nicheIndex}][object]" class="form-control" placeholder="Descrição da Posição">
    </div>

    <!-- Novo campo para tagRFID -->
    <div class="form-group">
      <label>Tag RFID:</label>
      <input type="text" name="keylocker[keylockerinfos_attributes][${nicheIndex}][tagRFID]" class="form-control" placeholder="Tag RFID">
    </div>

    <!-- Novo campo para idInterno -->
    <div class="form-group">
      <label>ID Interno:</label>
      <input type="text" name="keylocker[keylockerinfos_attributes][${nicheIndex}][idInterno]" class="form-control" placeholder="ID Interno">
    </div>

    <!-- Novo campo para descrição -->
    <div class="form-group">
      <label>Descrição:</label>
      <input type="text" name="keylocker[keylockerinfos_attributes][${nicheIndex}][description]" class="form-control" placeholder="Descrição">
    </div>

    <!-- Novo campo para imagem -->
    <div class="form-group">
      <label>Imagem:</label>
      <input type="file" name="keylocker[keylockerinfos_attributes][${nicheIndex}][image]" class="form-control">
    </div>

    <button type="button" class="btn btn-danger btn-sm position-absolute" style="top: 5px; right: 5px;" onclick="removeNiche(this)">
      <i class="fas fa-times"></i>
    </button>
  `;

  container.appendChild(nicheField);
  nicheIndex++;
  updatePositions();
}

function removeNiche(button) {
  const nicheField = button.closest('.nested-fields');
  nicheField.remove();
  updatePositions();
}

function updatePositions() {
  const container = document.getElementById('keylockerinfos-container');
  const fields = container.querySelectorAll('.nested-fields');

  fields.forEach((field, index) => {
    field.querySelector('.position-number').innerText = index + 1;
    field.querySelector('input[type="hidden"]').value = index + 1;

    // Atualiza os name attributes
    const objectInput = field.querySelector('input[name*="[object]"]');
    objectInput.name = `keylocker[keylockerinfos_attributes][${index}][object]`;

    const hiddenInput = field.querySelector('input[type="hidden"]');
    hiddenInput.name = `keylocker[keylockerinfos_attributes][${index}][posicion]`;

    // Atualiza os name attributes para os novos campos
    const tagRFIDInput = field.querySelector('input[name*="[tagRFID]"]');
    tagRFIDInput.name = `keylocker[keylockerinfos_attributes][${index}][tagRFID]`;

    const idInternoInput = field.querySelector('input[name*="[idInterno]"]');
    idInternoInput.name = `keylocker[keylockerinfos_attributes][${index}][idInterno]`;

    const descriptionInput = field.querySelector('input[name*="[description]"]');
    descriptionInput.name = `keylocker[keylockerinfos_attributes][${index}][description]`;

    const imageInput = field.querySelector('input[name*="[image]"]');
    imageInput.name = `keylocker[keylockerinfos_attributes][${index}][image]`;
  });

  nicheIndex = fields.length;
}
</script>