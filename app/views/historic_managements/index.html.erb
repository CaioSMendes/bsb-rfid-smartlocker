<div class="container-fluid mt-4">
  <h3 class="mb-3"><i class="fas fa-history me-2"></i> Histórico de Movimentações do Ativo: <%= @item.name %></h3>

  <% if @historic_managements.any? %>
    <div class="row">
      <% @historic_managements.each do |h| %>
        <div class="col-12 col-md-6 col-lg-4">
          <div class="card mb-3 shadow-sm hover-card">
            <div class="card-body">
              <p>
                <i class="fas fa-user text-primary me-2"></i>
                <strong>Usuário:</strong> <%= h.user.name %>
              </p>
              <p>
                <i class="fas fa-tasks text-success me-2"></i>
                <strong>Ação:</strong> <%= h.action.capitalize %>
              </p>
              <% if h.description.present? %>
                <p>
                  <i class="fas fa-align-left text-muted me-2"></i>
                  <strong>Descrição:</strong> <%= h.description %>
                </p>
              <% end %>
              <p>
                <i class="fas fa-clock text-warning me-2"></i>
                <strong>Data/Hora:</strong> <%= h.action_time.strftime("%d/%m/%Y %H:%M") %>
              </p>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <p class="text-muted"><i class="fas fa-info-circle me-2"></i> Nenhum histórico encontrado para este item.</p>
  <% end %>

  <div class="mt-3">
    <%= link_to asset_management_item_path(@asset_management, @item), class: "btn btn-secondary" do %>
      <i class="fas fa-arrow-left"></i> Voltar ao Item
    <% end %>
  </div>
</div>