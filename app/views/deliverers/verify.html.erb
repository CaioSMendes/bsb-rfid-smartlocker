<h1>Verificar Entregador</h1>

<%= form_with url: verify_deliverers_path, method: :get, local: true do %>
  <div class="field">
    <%= label_tag :email, "E-mail ou Telefone ou CPF" %>
    <%= text_field_tag :email %>
  </div>

  <div class="actions">
    <%= submit_tag "Verificar" %>
  </div>
<% end %>

<% if @deliverer %>
  <h2>Entregador Encontrado</h2>
  <p><strong>Nome:</strong> <%= @deliverer.name %> <%= @deliverer.lastname %></p>
  <p><strong>E-mail:</strong> <%= @deliverer.email %></p>
  <p><strong>Telefone:</strong> <%= @deliverer.formatted_phone %></p>
  <%= link_to 'Criar Encomenda', new_delivery_path %>
<% end %>
