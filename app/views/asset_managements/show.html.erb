<div id="page-wrapper">
  <div class="container-fluid">
    <div class="row">
      <div class="col-12">
        <ol class="breadcrumb">
          <li class="active">
            <h1><i class="fas fa-warehouse"></i> Meus Depósitos</h1>
            <p class="mb-0 text-muted fs-5"><%= @asset_management.name %></p>
          </li>
        </ol>
      </div>
    </div>
    <div class="row">
      <div class="col-12">
        </div>
      </div>
    </div>
</div>


<!-- Últimas Categorias -->
<div class="d-flex justify-content-between align-items-center mb-3">
  <h3><i class="fa fa-tags text-primary"></i> Últimas Categorias</h3>
</div>

<%= link_to new_asset_management_category_path(@asset_management), class: "btn btn-success" do %>
  <i class="fa fa-plus"></i> Cadastrar Categoria
<% end %>
<br>
<br>
<div class="row">
  <% @latest_categories.each do |category| %>
    <div class="col-12 col-sm-6 col-md-4 col-lg-3">
      <%= link_to asset_management_category_path(@asset_management, category), class: "text-decoration-none text-dark" do %>
        <div class="card mb-4 h-100 shadow-sm hover-card">
          <div class="text-center p-2">
            <%= image_tag 'categoria.png', size: '288x288', class: "img-fluid rounded" %>
          </div>
          <div class="card-body">
            <p><i class="fas fa-tags text-primary me-2"></i>
              <strong>Nome:</strong> <%= category.name || "Sem nome" %>
            </p>
            <p><i class="fas fa-align-left text-muted me-2"></i>
              <strong>Descrição:</strong> <%= category.description || "Sem descrição" %>
            </p>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
<br>
<% if @latest_categories.any? %>
  <div class="text-end mb-5">
    <%= link_to "Ver todas as Categorias", asset_management_categories_path(@asset_management), class: "btn btn-primary" %>
  </div>
<% end %>

<hr>

<!-- Últimas Localizações -->
<div class="d-flex justify-content-between align-items-center mb-3">
  <h3><i class="fa fa-map-marker-alt text-danger"></i> Últimas Localidades</h3>
</div>
<%= link_to new_asset_management_location_path(@asset_management), class: "btn btn-success" do %>
  <i class="fa fa-plus"></i> Cadastrar Localidade
<% end %>
<br>
<br>
<div class="row">
  <% @latest_locations.each do |location| %>
    <div class="col-12 col-sm-6 col-md-4 col-lg-3">
      <%= link_to asset_management_location_path(@asset_management, location), class: "text-decoration-none text-dark" do %>
        <div class="card mb-4 h-100 shadow-sm hover-card">
          <div class="text-center p-2">
            <%= image_tag 'gps1.jpg', size: '288x288', class: "img-fluid rounded" %>
          </div>
          <div class="card-body">
            <p><i class="fas fa-map-marker-alt text-danger me-2"></i>
              <strong>Nome:</strong> <%= location.name || "Sem nome" %>
            </p>
            <p><i class="fas fa-barcode text-primary me-2"></i>
              <strong>Código:</strong> <%= location.code || "Sem código" %>
            </p>
            <p><i class="fas fa-align-left text-muted me-2"></i>
              <strong>Descrição:</strong> <%= location.description || "Sem descrição" %>
            </p>
            <p><i class="fas fa-road text-success me-2"></i>
              <strong>Endereço:</strong> <%= location.address || "Sem endereço" %>
            </p>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
<br>
<% if @latest_locations.any? %>
  <div class="text-end mb-5">
    <%= link_to "Ver todas as Localidades", asset_management_locations_path(@asset_management), class: "btn btn-primary" %>
  </div>
<% end %>

<hr>

<!-- Últimos Itens -->
<div class="d-flex justify-content-between align-items-center mb-3">
  <h3><i class="fa fa-box text-success"></i> Últimos Itens</h3>
</div>
<%= link_to new_asset_management_item_path(@asset_management), class: "btn btn-success" do %>
  <i class="fa fa-plus"></i> Cadastrar Ativo
<% end %>
<br>
<br>
<div class="row">
  <% @latest_items.each do |item| %>
    <div class="col-12 col-sm-6 col-md-4 col-lg-3">
      <%= link_to asset_management_item_path(@asset_management, item), class: "text-decoration-none text-dark" do %>
        <div class="card mb-4 h-100 shadow-sm hover-card">
          <div class="text-center p-2">
            <%= image_tag item.image.presence || 'gestao_ativo1.jpg', size: '288x288', class: "img-fluid rounded" %>
          </div>
          <div class="card-body">
            <p><i class="fas fa-box text-secondary me-2"></i>
              <strong>Nome:</strong> <%= item.name || "Sem nome" %>
            </p>
            <p><i class="fas fa-rss text-warning me-2"></i>
              <strong>Tag RFID:</strong> <%= item.tagRFID || "Sem tag" %>
            </p>
            <p><i class="fas fa-hashtag text-info me-2"></i>
              <strong>ID Interno:</strong> <%= item.idInterno || "Sem ID" %>
            </p>
            <p><i class="fas fa-align-left text-muted me-2"></i>
              <strong>Descrição:</strong> <%= item.description || "Sem descrição" %>
            </p>
            <p><i class="fas fa-info-circle text-dark me-2"></i>
              <strong>Status:</strong> <%= item.status || "Sem status" %>
            </p>
            <p><i class="fas fa-circle text-secondary me-2"></i>
              <strong>Vazio:</strong> <%= item.empty || "Sem status" %>
            </p>
            <p><i class="fas fa-list-alt text-primary me-2"></i>
              <strong>Categoria:</strong> <%= item.category&.name || "Sem categoria" %>
            </p>
            <p><i class="fas fa-map-marker-alt text-danger me-2"></i>
              <strong>Localização:</strong> <%= item.location&.name || "Sem localização" %>
            </p>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
</div>
<br>
<% if @latest_items.any? %>
  <div class="text-end mb-5">
    <%= link_to "Ver todos os Itens", asset_management_items_path(@asset_management), class: "btn btn-primary" %>
  </div>
<% end %>
